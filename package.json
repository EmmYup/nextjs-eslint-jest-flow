{
  "name": "nextjs-eslint-jest-flow",
  "version": "1.0.0",
  "description": "Nextjs implementation with EsLint Jest and Flow",
  "main": "index.js",
  "repository": "EmmanuelYupit/nextjs-eslint-jest-flow",
  "author": {
    "name": "Emmanuel Yupit"
  },
  "license": "MIT",
  "dependencies": {
    "next": "^6.1.1",
    "next-eslint": "^0.0.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:all": "NODE_ENV=test yarn run lint && yarn run test:coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ignore-pattern coverage **/*.{js,jsx}",
    "pre-commit": "lint-staged",
    "flow": "flow"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "22.4.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.76.0",
    "husky": "^1.0.0-rc.13",
    "jest": "22.0.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.2.0"
  },
  "engines": {
    "node": ">=8.11"
  }
}
